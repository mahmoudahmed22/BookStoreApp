
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label for="CategoryName" class="control-label">Enter CategoryName</label>
        <input type="text" for="CategoryName" name="CategoryName" class="form-control" placeholder="Enter Name">
    </div>

    <button type="submit" class="btn btn-primary">Save New Category</button>
</form>
