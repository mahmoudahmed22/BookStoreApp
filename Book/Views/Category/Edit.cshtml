@model Category
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<form asp-action="Edit" method="post" asp-route-id="@Model.CategoryID">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label for="CategoryName" class="control-label">Enter CategoryName</label>
        <input type="text" for="CategoryName" value="@Model.CategoryName" name="CategoryName" class="form-control" placeholder="Enter Name">
    </div>

    <button type="submit" class="btn btn-primary">Edit Category</button>
</form>

